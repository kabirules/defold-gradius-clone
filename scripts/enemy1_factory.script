local counter = 0
local wait = 50
local time_for_wave1 = 100
local time_for_wave2 = 400
local wave1_enemies = 6
local wave1_active = false
local wave2_enemies = 6
local wave2_active = false

local function createOneEnemy1(height)
	local p = go.get_position()
	p.y = height
	local component = "#enemy1_factory"
	factory.create(component, p)
end

