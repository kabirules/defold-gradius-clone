function update(self, dt)
	counter = counter + 1
	if not wave1_finished and wave1_enemies > 0 then
		if counter % wait == 0 then
			createOneEnemy1()
			wave1_enemies = wave1_enemies - 1
		end
		if wave1_enemies == 0 then
			wave1_finished = true
			counter = 1
		end
	end
	if wave1_finished and not wave2_finished then
		if counter % wait == 0 then
			createOneEnemy1()
			wave2_enemies = wave2_enemies - 1
		end
		if wave2_enemies == 0 then
			wave2_finished = true
		end		
	end
	
end

