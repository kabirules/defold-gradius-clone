function update(self, dt)
	counter = counter + 1
	
	if time_for_wave1 == counter then
		wave1_active = true
	elseif time_for_wave2 == counter then
		wave2_active = true
	end
	
	if wave1_active then
		if counter % wait == 0 then
			createOneEnemy1(300)
			wave1_enemies = wave1_enemies - 1
		end
		if wave1_enemies == 0 then
			wave1_active = false
		end
	end
	
	if wave2_active then
		if counter % wait == 0 then
			createOneEnemy1(150)
			wave2_enemies = wave2_enemies - 1
		end
		if wave2_enemies == 0 then
			wave2_active = false
		end
	end
	
end

