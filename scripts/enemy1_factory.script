local counter = 0
local wait = 50
local wave1_enemies = 3
local wave1_finished = false
local wave2_enemies = 3
local wave2_finished = false

local function createOneEnemy1()
	local p = go.get_position()
	local component = "#enemy1_factory"
	factory.create(component, p)
end

